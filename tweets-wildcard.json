{
  "template": "tweets-*",
  "settings": {
    "analysis": {
      "analyzer": {
        "my_stop_analyzer": {
          "type": "stop",
          "stopwords": [
            "t",
            "co",
            "https"
          ]
        }
      }
    }
  },
  "mappings": {
    "avocado": {
      "properties": {
        "coordinates": {
          "properties": {
            "coordinates": {
              "type": "geo_point",
              "ignore_malformed": true
            }
          }
        },
        "geo": {
          "properties": {
            "coordinates": {
              "type": "geo_point",
              "ignore_malformed": true
            }
          }
        },
        "text": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword"
            },
            "stop_analyzed": {
              "type": "text",
              "analyzer": "my_stop_analyzer",
              "fielddata": true
            }
          }
        }
      }
    }
  }
}
